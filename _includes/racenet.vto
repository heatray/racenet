  <script type="text/javascript">
    var tickerDisabled = true;
    var g_textLength = 100; // just a guess initially
    $(document).ready(function() {
      $('.dropdown-toggle').dropdown();
      $('.carousel').carousel({ interval: 500 });
      // UpdateNewsTicker();
      $(window).resize(function() {
        if (tickerDisabled && $('#news-container-list').is(':visible')) {
          tickerDisabled = false;
          reInitTicker();
        }
      });

    });

    var mq_timer = 120000;
    var mq_maxwidth = 0;

    function UpdateNewsTicker() {
      setTimeout(function() {
        $.ajax({
          type: "GET",
          url: '/api/RaceNetapi/GetRaceNet_NewsTicker',
          cache: false,
          dataType: 'json',
          success: function(result) {
            g_textLength = 0;
            mq_maxwidth = 0;
            for (var k = 0; k <= 1; k++) {
              interior = $('<span class="news-container-section" />');
              for (var i = 0; i < result.length; i++) {
                var li = $('<li/>')
                  .append($('<div/>').addClass('news-header').text(result[i].NewsHeader))
                  .append($('<div/>').addClass('news-body').text(result[i].NewsBody));
                interior.append(li);

              }
              $('#news-container-list').append(interior);
              mq_maxwidth = interior.width();
            }
            $(window).unload(store_mq_pos);
            mq_init_pos = get_mq_pos();
            if (mq_init_pos == 'NaN') {
              mq_init_pos = 0;
            }
            mq_timer = mq_maxwidth * 12;
            $('#news-container-list').css({ 'position': 'relative', 'left': mq_init_pos + 'px' });

            moveTickerLeft();
          }
        });
      }, 1000);
    }

    function got_storage() { try { return 'localStorage' in window && window['localStorage'] !== null; } catch (e) { return false; } }

    function store_mq_pos() {
      if (got_storage) {
        localStorage["mq_pos"] = parseInt($('#news-container-list').css('left'), 10);
      }
    }

    function get_mq_pos() {
      if (got_storage && localStorage["mq_pos"]) {
        return localStorage["mq_pos"];
      }
      return 0;
    }

    function reInitTicker()
    {
      $('#news-container-list').css({ 'left': '0px' });
      moveTickerLeft();
    }

    function moveTickerLeft()
    {
      if (!($('#news-container-list').is(':visible'))) {
        tickerDisabled = true;
        return;
      }
      if (mq_maxwidth == 0)
      {
        $('#news-container-list').empty();
        return UpdateNewsTicker();
      }
      var curPos = -parseInt($('#news-container-list').css('left'), 10);
      if (Math.abs(curPos) >= mq_maxwidth)
      {
        return reInitTicker();
      }
      var act_timer = (1 - (Math.abs(curPos) / mq_maxwidth)) * mq_timer;
      $('#news-container-list').animate({ 'left': '-=' + (mq_maxwidth - curPos) + 'px' }, act_timer, "linear", reInitTicker);
    }
  </script>

