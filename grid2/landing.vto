<script type="text/javascript">
    $(document).ready(function () {
        $('.video-container').mouseenter(function () {
            $('video.video', this).get(0).play();
        }).mouseleave(function () {
            $('video.video', this).get(0).pause();
        });

        if (vidsupport()) {
            $('.iph').addClass('no_bg');
        }
    });

    function vidtag()
    {
        return !!document.createElement('video').canPlayType;
    }

    function vidsupport()
    {
        if(!vidtag())
        {
            return false;
        }
        var v = document.createElement('video');
        return v.canPlayType('video/mp4') || v.canPlayType('video/ogg');
    }


